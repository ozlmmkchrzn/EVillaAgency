@model UpdateHouseDto
@{
    ViewData["Title"] = "UserUpdateHouse";
    Layout = "~/Views/UserAdmin/_UserAdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Ev İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ev Güncelle</div>
                        </div>
                        <input type="hidden" asp-for="HouseId" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Evin Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="description">Evin Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="location">Evin Konumunu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                            <div class="form-group">
                                <label for="houseType">Ev Tipi Seçiniz</label>
                                <select id="houseType" asp-for="HouseTypeId" class="form-control">
                                    <option value="">--Ev Tipi Seç--</option>
                                    @foreach (var item in ViewBag.HouseTypes)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="owner">Ev Sahibini Seçiniz</label>
                                <select id="owner" asp-for="OwnerId" class="form-control">
                                    <option value="">--Ev Sahibi Seç--</option>
                                    @foreach (var item in ViewBag.Users)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="heating">Isıtma Tipi Seçiniz</label>
                                <select id="heating" asp-for="HeatingTypeId" class="form-control">
                                    <option value="">--Isıtma Tipi Seç--</option>
                                    @foreach (var item in ViewBag.HeatingTypes)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="size">Evin Metrekaresini Giriniz</label>
                                <input type="text" class="form-control" asp-for="Size" id="size">
                            </div>
                            <div class="form-group">
                                <label for="price">Evin Fiyatını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Price" id="price">
                            </div>
                            <div class="form-group">
                                <label for="bedroom">Yatak Odası Sayısını Giriniz</label>
                                <input type="number" class="form-control" asp-for="Bedrooms" id="bedroom">
                            </div>
                            <div class="form-group">
                                <label for="bathroom">Banyo Sayısını Giriniz</label>
                                <input type="number" class="form-control" asp-for="Bathrooms" id="bathroom">
                            </div>
                            <div class="form-group">
                                <label for="year">Binanın Yapım Yılını Giriniz</label>
                                <input type="text" class="form-control" asp-for="YearBuilt" id="year">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" asp-for="Pool" id="pool">
                                        <label class="custom-control-label" for="pool">Havuzu var mı?</label>
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" asp-for="Garage" id="garage">
                                        <label class="custom-control-label" for="garage">Garajı var mı?</label>
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" asp-for="Garden" id="garden">
                                        <label class="custom-control-label" for="garden">Bahçesi var mı?</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Evi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
