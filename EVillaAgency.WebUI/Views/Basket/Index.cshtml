@model ResultBasketDto
@{
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!DOCTYPE html>
<html>


<body class="sub_page">

    <br />
    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" href="/Home/Index">Ana Sayfa</a>
                    <a class="breadcrumb-item text-white" href="#">Menü</a>
                    <span class="breadcrumb-item active">Sepetiniz</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Evin Başlığı</th>
                            <th>Evin Sahibi</th>
                            <th>Evin Tipi</th>
                            <th>Fiyatı</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                        <tbody class="align-middle">
                            <tr>
                            <input type="hidden" name="basketId" value="@Model.BasketId" />
                                <td class="align-middle">1</td>
                                <td class="align-middle">@Model.HouseTitle</td>
                                <td class="align-middle">@Model.OwnerName</td>
                                <td class="align-middle">@Model.HouseTypeName</td>
                                <td class="align-middle">@Model.HousePrice</td>
                                <td class="align-middle btn-delete"><a class="btn btn-sm btn-danger" href="/Basket/DeleteBasket/@Model.BasketId"><i class="fa fa-times"></i></a></td>
                            </tr>
                        </tbody>
                </table>
            </div>
            <div class="col-log-4">
                <form>
                    <div class="input-group">
                        <input type="text" id="couponcode" class="form-control border-1 p-4" placeholder="Kupon Kodunuz" />
                        <div>
                            <a style="height:48px;padding-top:11px; margin-left:5px;" class="btn btn-warning" id="btncouponcode">Kuponu Uygula</a>
                        </div>
                    </div>
                </form>
                <br />
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-warning pr-3">Sepet Özeti</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div id="container" class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-6">
                            <h6>Toplam Tutar</h6>
                            <h6><span id="totalprice">@Model.HousePrice</span>₺</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Kdv Oranı</h6>
                            <h6 id="kdv" class="font-weight-medium">+KDV</></h6>
                        </div>
                        <br />
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Toplam Tutar</h5>
                            <h5><span id="totalpricewithkdv">@Model.HousePrice</span>₺</h5>
                        </div>
                        <br />
                        <a class="btn btn-outline-info" href="/Order/CreateOrder/@Model.BasketId">Siparişi Tamamla</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>