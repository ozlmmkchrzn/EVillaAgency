@model UpdateHouseTypeDto
@{
    Layout = null;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Ev Tipi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ev Tipi  Girişi</div>
                        </div>
                        <input type="hidden" asp-for="HouseTypeId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ev tipini  Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
