@model List<ResultUserDto>
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Üye İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Üye Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Üye alanıyla ilgili işlemleri yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kullanıcı Adı</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Telefon Numarası</th>
                                    <th scope="col">Üye Olma Tarihi</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserId</td>
                                        <td>@item.Username</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.CreatedAt</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/User/UpdateUser/@item.UserId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/User/DeleteUser/@item.UserId" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/User/CreateUser/" class="btn btn-outline-primary">Yeni Üye Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
