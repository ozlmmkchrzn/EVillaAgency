@model UpdateUserDto
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Üye İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Üye Bilgisi Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="UserId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="id">Id Bilgisini Giriniz</label>
                                <input type="text" class="form-control" asp-for="UserId" id="id">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="username">Kullanıcı Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Username" id="username">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="mail">Mail Adresini Giriniz</label>
                                <input type="email" class="form-control" asp-for="Email" id="mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="password">Şifrenizi Giriniz</label>
                                <input type="password" class="form-control" asp-for="Password" id="password">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Telefon Numaranızı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="image">Resim Url Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="image">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Üye Bilgisini Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
